                        </Trigger>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource PressedBrush}" />
                            <Setter TargetName="ToggleButtonOnImage" Property="Visibility" Value="Visible" />
